<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div class="panel panel-primary">

				<h4>Create your team!</h4>

				<br/>

				<%= form_for :team, url: create_team_path do %>
				  Team Name: <%= text_field_tag :name %><br/>
				  <%= hidden_field_tag "user_id", @user.id %><br/>

				  <%= submit_tag "Save", class: "btn btn-info" %>
				<% end %>

				<br/>

			</div>
		</div>
	</div>	

</div>
