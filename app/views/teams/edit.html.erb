<div class="container">

	<div class="row">
		<div class="col-sm-12">
			<div class="panel panel-primary">

				<h4>Edit your team!</h4>

				<br/>

				<%= form_for :team, url: update_team_path, method: 'patch' do %>
				  Team Name: <%= text_field_tag :name %><br/>
				  <%= hidden_field_tag "user_id", @user.id %><br/>
				<div class="row">  
					<div class="col-sm-4">
					</div>
				<%= submit_tag "Save changes!", class: "btn btn-info" %>
				<% end %>

				<%= link_to "Back", sessions_show_path, class: "btn btn-danger" %>
				</div>

			</div>
		</div>
	</div>

</div>