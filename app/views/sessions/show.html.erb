
<div class="container">

	<%= render "shared/nav" %>

	<h1><%= @user.name %>'s account</h1>

	<br/>	

	<h2><%= @user.team.name %></h2>


	<br/>

	<h3>Players</h3>

	<br/>

	<div class="row">
		<% @roster.each do |x| %>
		<!--set variable to player-->
		<% @player_id = x.player_id %>
		<!--grabs player object whose id matches variable above; 'where' returns array, grab first item and return name-->
		<div class="col-sm-6 col-md-4">
	    <div class="thumbnail">
		
	    	<div class="caption">
			<h3><%= link_to (Player.where(id: @player_id).first.name), x.player %></h3>
			</div>
		</div>
		</div>
		<%end%>

	</div>

	<br/>

	<%= link_to "Logout", destroy_session_path, class: "btn btn-warning" %>

	<br/>

</div>
