Sign up form

<br/>

<% flash.each do |key,value|  %>
	<div class="<%= key %>" > <%= value %> </div>
<% end %>

<%= form_for :user, url: new_path do %>
  Name: <%= text_field_tag :name %><br/>
  Email: <%= email_field_tag :email %><br/>
  Password: <%= password_field_tag :password %><br/>
  Confirm Password: <%= password_field_tag :password_confirmation %><br/>
  <%= submit_tag "Sign Up!" %>
<% end %>

<br/>

<button><%= link_to "Back", root_path %></button>	