<div class="container">

	<div class="panel panel-primary col-md-6">
		<h4>Login</h4>

		<br/>

		<% flash.each do |key,value|  %>
		    <div class="<%= key %>" > <%= value %> </div>
		<% end %>

		<br/>

		<%= form_for :user, url: create_session_path do %>
			<div class="row">
			  <label class="col-sm-2 col-md-2 control-label">Email</label>
			  <div class="col-sm-8"><%= email_field_tag :email, nil, placeholder: "Email", class: "form-control" %>
		  	  </div>
		  	</div>
		  	<div class="row">
			  <label class="col-sm-2 col-md-2 control-label">Password</label>
			  <div class="col-sm-8"><%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
			  </div>
			<div class="row">

			<div class="col-sm-offset-2 col-sm-10">
		  		<%= submit_tag "Sign In", class: "btn btn-primary" %>
		<% end %>
				<%= link_to "Back", root_path, class: "btn btn-danger" %>
		    </div>
	</div>


</div>	