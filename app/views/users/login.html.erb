<div class="container">

	login form

	<br/>

	<% flash.each do |key,value|  %>
	    <div class="<%= key %>" > <%= value %> </div>
	<% end %>

	<br/>

	<%= form_for :user, url: create_session_path do %>
	  <label class="col-sm-2 control-label">Email</label>
	  <div class="col-sm-10"><%= email_field_tag :email, nil, placeholder: "Email", class: "form-control" %>
	  </div>
	  <label class="col-sm-2 control-label">Password</label>
	  <div class="col-sm-10"><%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
	  </div>
	  <div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
	  		<%= submit_tag "Sign In", class: "btn btn-default" %>
	<% end %>
			<%= link_to "Back", root_path, class: "btn btn-default" %>
	    </div>
	  </div>


</div>	