<div class="container">

	<h1>Players</h1>

	<br/>

	<%= form_tag('/players/list', method: "get") do %>
		Search player by:
		<%= select_tag "search", options_for_select(["name","position","r_team"]) %>
	      : <%= text_field_tag :query %>
		<%= submit_tag "Search", "class" => "btn btn-primary" %>
	    <% end %>

		<br/>

	  <% if @players.methods.include? :page %>
	    <%= paginate @players %>
	    <%end%>

	<br/>

	<table class="table table-bordered">
		<tr>
			<th>Name</th>
			<th>Position</th>
			<th>Team</th>
		</tr>
		<% @playerz.each do |x| %>
		<tr>
			<td><%= link_to x.name, x %></td> 
			<td><%= x.position %></td>
			<td><%= x.r_team %></td>
		</tr>
		<%end%>
	</table>

	<br/>

	<button><%= link_to "Back", sessions_show_path %></button>


</div>
